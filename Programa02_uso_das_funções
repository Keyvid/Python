def calcula_imc (peso, altura):
    print ("Parâmetro peso: ", peso)
    print ("Parâmetro altura: ", altura)
    imc = peso/altura**2
    return imc 

# Início do programa
print ("Início do programa")
indice = calcula_imc(altura=1.80, peso=70)
print("IMC: ", indice)
if indice < 18.5:
    print("Baixo peso")
elif indice < 25:
    print("Peso adequado")
elif indice < 30:
    print("Sobre peso")
else:
    print("Obeso")
print ("Fim do programa")
